<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".MovieDetailsActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/root_left_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/root_right_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="16dp" />

        <ImageView
            android:id="@+id/topBackground"
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:scaleType="centerCrop"
            android:src="@drawable/orig"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_button_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/backTextView"
            app:layout_constraintTop_toTopOf="@id/backTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"/>

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:text="back"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/back_button_arrow_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="+13"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/movie_name_text"
            app:layout_constraintStart_toEndOf="@id/root_left_guideline"/>
        <TextView
            android:id="@+id/movie_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="254dp"
            android:text="Avengers:\nEnd Game"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/topBackground"/>
        <TextView
            android:id="@+id/movie_tags_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Action,Adventure, Fantasy"
            android:textColor="#FF3466"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/movie_name_text" />

        <ImageView
            android:id="@+id/movie_rating_star1_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toBottomOf="@+id/movie_reviews_count_text"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/movie_reviews_count_text"
            app:tint="#FF3466"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/movie_rating_star2_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toBottomOf="@+id/movie_rating_star1_image"
            app:layout_constraintStart_toEndOf="@+id/movie_rating_star1_image"
            app:layout_constraintTop_toTopOf="@+id/movie_rating_star1_image"
            app:tint="#FF3466"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/movie_rating_star3_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toBottomOf="@+id/movie_rating_star1_image"
            app:layout_constraintStart_toEndOf="@+id/movie_rating_star2_image"
            app:layout_constraintTop_toTopOf="@+id/movie_rating_star1_image"
            app:tint="#FF3466"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/movie_rating_star4_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toBottomOf="@+id/movie_rating_star1_image"
            app:layout_constraintStart_toEndOf="@+id/movie_rating_star3_image"
            app:layout_constraintTop_toTopOf="@+id/movie_rating_star1_image"
            app:tint="#FF3466"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/movie_rating_star5_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@drawable/ic_star_icon"
            app:layout_constraintBottom_toBottomOf="@+id/movie_rating_star1_image"
            app:layout_constraintStart_toEndOf="@+id/movie_rating_star4_image"
            app:layout_constraintTop_toTopOf="@+id/movie_rating_star1_image"
            app:tint="#FF3466"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/movie_reviews_count_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="125 reviews"
            android:textAllCaps="true"
            android:textColor="#6D6D80"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/movie_rating_star5_image"
            app:layout_constraintTop_toBottomOf="@+id/movie_tags_text" />

        <TextView
            android:id="@+id/movie_storyline_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Storyline"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/movie_reviews_count_text" />

        <TextView
            android:id="@+id/movie_storyline_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/movie_storyline_title_text" />

        <TextView
            android:id="@+id/movie_cast_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cast"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/movie_storyline_text" />

        <ImageView
            android:id="@+id/downeyImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/downey"
            app:layout_constraintEnd_toStartOf="@id/evansImageView"
            app:layout_constraintTop_toBottomOf="@id/movie_cast_title_text"
            app:layout_constraintStart_toEndOf="@+id/root_left_guideline"
            />
        <ImageView
            android:id="@+id/evansImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/evans"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/rufallo_image_view"
            app:layout_constraintStart_toEndOf="@id/downeyImageView"
            app:layout_constraintTop_toTopOf="@id/downeyImageView"
            />
        <ImageView
            android:id="@+id/rufallo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ruffalo"
            app:layout_constraintEnd_toStartOf="@id/hemsworth_image_view"
            app:layout_constraintStart_toEndOf="@id/evansImageView"
            app:layout_constraintTop_toTopOf="@id/downeyImageView"/>
        <ImageView
            android:id="@+id/hemsworth_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/hemsworth"
            app:layout_constraintEnd_toStartOf="@id/root_right_guideline"
            app:layout_constraintStart_toEndOf="@id/rufallo_image_view"
            app:layout_constraintTop_toTopOf="@id/downeyImageView"
            />
        <TextView
            android:id="@+id/downey_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
            android:text="Robert \nDowney Jr."
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/downeyImageView"
            app:layout_constraintStart_toStartOf="@id/downeyImageView"
            app:layout_constraintTop_toBottomOf="@id/downeyImageView" />
        <TextView
            android:id="@+id/evans_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chris Evans"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/evansImageView"
            app:layout_constraintStart_toStartOf="@id/evansImageView"
            app:layout_constraintTop_toBottomOf="@id/evansImageView"
            />
        <TextView
            android:id="@+id/ruffalo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Rufallo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/rufallo_image_view"
            app:layout_constraintStart_toStartOf="@id/rufallo_image_view"
            app:layout_constraintTop_toBottomOf="@id/rufallo_image_view"
            />
        <TextView
            android:id="@+id/hemswoth_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chris \nHemsworth"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/hemsworth_image_view"
            app:layout_constraintStart_toStartOf="@id/hemsworth_image_view"
            app:layout_constraintTop_toBottomOf="@id/hemsworth_image_view"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>